{{> sidebars }}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Gracias por su compra!!</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/products">Home</a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-8">
            <div class="invoice p-3 mb-3">
              <!-- title row -->
              <div class="row">
                <div class="col-12">
                  <h4>
                    <i class="fas fa-check text-success"></i> CoderComprasTicket, Inc.
                    <small class="float-right" id="current-date"></small>
                  </h4>
                </div>
                <!-- /.col -->
              </div>
              <!-- info row -->
              <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                  de:
                  <address>
                    <strong>Coder, Inc.</strong><br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Phone: (381) 123-5432<br>
                    Email: tiendaCoder@mail.com
                  </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  Para:
                  <address>
                    <strong>{{user.first_name}} {{user.last_name}} </strong> <br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Age: {{user.age}}<br>
                    Email: {{user.email}}
                  </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  <b>Productos no procesados en cart: {{productsNotPurchasedCount}}</b><br>
                  <br>
                  <b>Order ID: {{ticket.code}}</b> <br>
                  <b>Payment Due:</b> {{ticket.purchase_datetime}}<br>
                  <b>Total:</b> {{ticket.amount}}
                </div>
                <!-- /.col -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>
              
    



