<!-- Script de la vista de handlebars para actulizar la vista del carrito -->
<script>
  $(document).ready(function() {
  // Esta variable almacena el estado del carrito en el lado del cliente
  var cartState = {};

  $('.add-to-cart').on('click', function() {
    var productName = $(this).data('title');
    var productId = $(this).data('id');
    var quantity = 1; 

    fetch(`/cart/product/${productId}?quantity=${quantity}`, {
      method: 'POST',
    })
    .then(response => response.json())
    .then(data => {
      // Aquí, actualizamos el estado del carrito en el lado del cliente con la información del producto añadido
      carts = data.payload._id
      
      if (cartState.hasOwnProperty(productName)) {
        cartState[productName] += quantity;
      } else {
        cartState[productName] = quantity;
      }

      // Y luego actualizamos la vista del carrito con el estado del carrito en el lado del cliente
      updateCartView(cartState);
    })
    .catch(error => {
      console.error('Error:', error);
    });
  });

  // La función updateCartView toma el estado del carrito  y actualiza la vista del carrito
  function updateCartView(cartState) {
    var cartDropdown = $('.dropdown-menu');
    cartDropdown.empty();

    var totalItems = 0;
    for (var productName in cartState) {
      var quantity = cartState[productName];
      var truncatedTitle = productName.length > 10 ? productName.substring(0, 10) + '...' : productName;
      var listItem = $('<span class="dropdown-item text-truncate"></span>').text(truncatedTitle + ' (' + quantity + ')');
      cartDropdown.append(listItem);

      totalItems += quantity;
    }

    $('.navbar-badge').text(totalItems);

    if (totalItems > 0) {
      var checkoutLink = $(`<a href="/cart/${carts}" class="dropdown-item">Ir al carrito</a>`);
      cartDropdown.append(checkoutLink);
    }
  }
});

</script>


 



