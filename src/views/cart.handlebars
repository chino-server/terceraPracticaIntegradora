{{> sidebars }}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Estás a un paso de llevarte los productos!!</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/products">Home</a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="callout callout-info">
              <h5><i class="fas fa-info"></i> Note: </h5>
              {{user.first_name}} acuerdate de chequear bien tus datos antes de finalizar tu compra
            </div>


            <!-- Main content -->
            <div class="invoice p-3 mb-3">
              <!-- title row -->
              <div class="row">
                <div class="col-12">
                  <h4>
                    <i class="fas fa-globe"></i> CoderCompras, Inc.
                    <small class="float-right" id="current-date"></small>
                  </h4>
                </div>
                <!-- /.col -->
              </div>
              <!-- info row -->
              <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                  de:
                  <address>
                    <strong>Coder, Inc.</strong><br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Phone: (381) 123-5432<br>
                    Email: tiendaCoder@mail.com
                  </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  Para:
                  <address>
                    <strong>{{user.first_name}} {{user.last_name}} </strong> <br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Age: {{user.age}}<br>
                    Email: {{user.email}}
                  </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  <b>Invoice #007612</b><br>
                  <br>
                  <b>Order ID:</b> <br>
                  <b>Payment Due:</b> 2/22/2014<br>
                  <b>Account:</b> 968-34567
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- Table row -->
              <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped">
                          <thead>
                          <tr>
                              <th>Cantidad</th>
                              <th>Producto</th>
                              <th>Descripcion</th>
                              <th>Precio x unidad</th>
                          </tr>
                          </thead>
                          <tbody>
                          {{#each cart.products}}
                          <tr>
                              <td>{{this.quantity}}</td>
                              <td>{{this.pid.title}}</td> 
                              <td>{{this.pid.description}}</td> 
                              <td>{{this.pid.price}}</td> 
                          </tr>
                          {{/each}}
                          </tbody>
                    </table>

                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <div class="row">
                <!-- accepted payments column -->
                <div class="col-6">
                  <p class="lead">Métodos de pagos:</p>
                  <img src="../../dist/img/credit/visa.png" alt="Visa">
                  <img src="../../dist/img/credit/mastercard.png" alt="Mastercard">
                  <img src="../../dist/img/credit/american-express.png" alt="American Express">
                  <img src="../../dist/img/credit/paypal2.png" alt="Paypal">

                  <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                    En caso de cambios en el producto espere sentado y le llegará uno nuevo
                  </p>
                </div>
                <!-- /.col -->
                <div class="col-6">
                  <p class="lead">{{user.first_name}} estas a punto de realizar la compra, antes de impactar el pago se corrobora el stock de los productos</p>

                  <div class="table-responsive">
                    <table class="table">
                      <tr>
                        <th>Total:</th>
                        <td>${{cart.total}}</td>
                      </tr>
                    </table>
                  </div>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- this row will not appear when printing -->
              <div class="row no-print">
                <div class="col-12">
                  <button type="button" id="purchaseButton" data-id="{{this.cart._id}}" class="btn btn-success float-right"><i class="far fa-credit-card"></i> Pagar
                  </button>
                </div>
              </div>
            </div>
            <!-- /.invoice -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script>
window.onload = function() {
  var now = new Date();
  var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
  document.getElementById('current-date').textContent = now.toLocaleDateString('es-ES', options);
}
</script>

<script>
  const purchaseButton = document.getElementById("purchaseButton")
  purchaseButton.addEventListener('click', ()=>{
    const cid = '{{cart._id}}'
    window.location.href = `/cart/${cid}/purchase`;
  })
</script>

